    <priority>0.5</priority>
  </url>
  <url>
    <loc>https://your-domain.com/cookies</loc>
    <lastmod>2025-09-13</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.5</priority>
  </url>

